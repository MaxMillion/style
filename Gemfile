source 'https://rubygems.org'

gem "sass", "~> 3.3.4"

# Lets you import plain CSS files with Sass @import
gem "sass-css-importer", "~> 1.0.0.beta.0"

# Lets you do glob @imports in Sass
# Not required for Rails 3.1+
gem "sass-globbing", "~> 1.1.0"

# Changes the behaviour of Sass' @import so that files are only imported once
gem 'compass-import-once', :require => 'compass/import-once/activate'
# gem 'compass-import-once', '~> 1.0.4'

gem "susy", "~> 2.1.1"
